type Dog = {
    name:string;
    barks:boolean;
    wags:boolean;
};

type Cat = {
    name:string;
    purrs:boolean;
    murrs:boolean;
};

type DogAndCatUnion = Dog | Cat;

// Declare dog and cat
let dog: DogAndCatUnion = {
    name: "Buddy",
    barks: true,
    wags: true,
};

// Defining both types of dog and cat 
let hybridAnimal: DogAndCatUnion ={
    name: "Bella",
    barks: true,
    wags: true,
    purrs: false,
};

